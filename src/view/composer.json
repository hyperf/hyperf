{
    "name": "hyperf/view",
    "description": "A view library for Hyperf.",
    "license": "MIT",
    "keywords": [
        "php",
        "swoole",
        "hyperf",
        "view"
    ],
    "homepage": "https://hyperf.io",
    "support": {
        "docs": "https://hyperf.wiki",
        "issues": "https://github.com/hyperf/hyperf/issues",
        "pull-request": "https://github.com/hyperf/hyperf/pulls",
        "source": "https://github.com/hyperf/hyperf"
    },
    "require": {
        "php": ">=7.2",
        "hyperf/contract": "~2.1.0",
        "hyperf/utils": "~2.1.0",
        "psr/container": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9",
        "malukenho/docheader": "^0.1.6",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.4"
    },
    "suggest": {
        "hyperf/task": "Required to use task as a view render mode.",
        "smarty/smarty": "Required to use smarty as a view render engine.",
        "twig/twig": "Required to use twig as a view render engine.",
        "duncan3dc/blade": "Required to use blade as a view render engine.",
        "league/plates": "Required to use plates as a view render engine."
    },
    "autoload": {
        "psr-4": {
            "Hyperf\\View\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\View\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        },
        "hyperf": {
            "config": "Hyperf\\View\\ConfigProvider"
        }
    },
    "bin": [
    ],
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit --colors=always"
    }
}
