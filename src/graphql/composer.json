{
    "name": "hyperf/graphql",
    "description": "A GraphQL component for hyperf.",
    "license": "MIT",
    "keywords": [
        "php",
        "swoole",
        "hyperf",
        "GraphQL"
    ],
    "require": {
        "php": ">=8.1",
        "hyperf/codec": "~3.1.0",
        "hyperf/context": "~3.1.0",
        "hyperf/contract": "~3.1.0",
        "hyperf/di": "~3.1.0",
        "swow/psr7-plus": "^1.0",
        "thecodingmachine/graphqlite": "^7.0"
    },
    "suggest": {
        "hyperf/http-message": "Required to use GraphQLMiddleware.",
        "hyperf/http-server": "Required to use GraphQLMiddleware."
    },
    "autoload": {
        "psr-4": {
            "Hyperf\\GraphQL\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.1-dev"
        },
        "hyperf": {
            "config": "Hyperf\\GraphQL\\ConfigProvider"
        }
    }
}
