{
    "name": "hyperf/watcher",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "Hot reload watcher for Hyperf",
    "require": {
        "php": ">=8.0",
        "ext-posix": "*",
        "hyperf/codec": "~3.0.0",
        "hyperf/command": "~3.0.0",
        "hyperf/di": "~3.0.0",
        "hyperf/framework": "~3.0.0",
        "hyperf/support": "~3.0.0"
    },
    "autoload": {
        "files": [
            "src/Functions.php"
        ],
        "psr-4": {
            "Hyperf\\Watcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Watcher\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        },
        "hyperf": {
            "config": "Hyperf\\Watcher\\ConfigProvider"
        }
    }
}
