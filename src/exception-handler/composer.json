{
    "name": "hyperf/exception-handler",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "swoole",
        "exception-handler"
    ],
    "description": "Exception handler for hyperf",
    "autoload": {
        "psr-4": {
            "Hyperf\\ExceptionHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\ExceptionHandler\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.2",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "hyperf/contract": "~2.0.0",
        "hyperf/dispatcher": "~2.0.0",
        "hyperf/utils": "~2.0.0"
    },
    "require-dev": {
        "malukenho/docheader": "^0.1.6",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.0.0",
        "friendsofphp/php-cs-fixer": "^2.9"
    },
    "suggest": {
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        },
        "hyperf": {
            "config": "Hyperf\\ExceptionHandler\\ConfigProvider"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.xml",
        "co_test": "php tests/co_phpunit.php -c phpunit.xml"
    }
}
